pipeline
{
    agent any
    tools {
        maven 'Maven 3.3.9'
        jdk 'jdk8'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
    
    stages
    {
        stage("data fetching")
        {
            steps
            {
                git 'https://github.com/kshatriyasravi/app-server.git'
            }
        }
        stage("building jar")
        {
            steps
            {
                sh "mvn clean package"
            }
        }
    }
}
