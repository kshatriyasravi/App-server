pipeline {
    agent any
    tools {
        maven 'Maven3.6.3'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        stage ('scm ') {
          steps {
            
                git 'https://github.com/kshatriyasravi/Maven-pom.git'
                
                 
               }
            }   
        stage ('Build') {
            steps {
                sh 'mvn -version' 
                sh 'mvn clean'
               
            }
            
        }
    }
}

